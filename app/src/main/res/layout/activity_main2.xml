<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/pertama"
        android:layout_width="175dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/gambarterima"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/tensi" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/kedua"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/pertama">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/kodeterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#KODE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/nmterima"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/nmterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:text="NAMA BARANG"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deskripsiterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kodeterima"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="DESKRIPSI"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hargaterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deskripsiterima"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="harga"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/beli"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hargaterima"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/beli"
                android:layout_below="@+id/hargaterima"
                android:text="buah"
                android:layout_marginTop="23dp"
                android:textSize="15sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/bioterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIODATA PEMBELI"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/beli"/>

            <TextView
                android:id="@+id/nmpembeli_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:text="Nama : "
                android:textColor="@color/black"
                android:layout_below="@id/bioterima"/>

            <EditText
                android:id="@+id/nama_beli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nmpembeli_terima"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/bioterima"/>

            <TextView
                android:id="@+id/pkjpembeli_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:text="Pekerjaan : "
                android:textColor="@color/black"
                android:layout_below="@id/nama_beli"/>

            <EditText
                android:id="@+id/pekerjaan_beli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pkjpembeli_terima"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/nama_beli"/>

            <TextView
                android:id="@+id/almtpembeli_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:text="Alamat : "
                android:textColor="@color/black"
                android:layout_below="@id/pekerjaan_beli"/>

            <EditText
                android:id="@+id/alamat_beli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/almtpembeli_terima"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/pekerjaan_beli"/>

            <TextView
                android:id="@+id/total_terima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:text="Total Harga : "
                android:textColor="@color/black"
                android:layout_below="@id/alamat_beli"/>

            <EditText
                android:id="@+id/total_terimabeli"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamat_beli"
                android:layout_toRightOf="@+id/total_terima"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:ems="5"
                android:inputType="number" />

            <Button
                android:id="@+id/tombolbeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_terimabeli"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorAccent"
                android:onClick="beli"
                android:text="Beli"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>